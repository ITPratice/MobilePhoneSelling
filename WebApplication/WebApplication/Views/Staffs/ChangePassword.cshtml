@model WebApplication.Models.Account
@using WebApplication.Common

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            //$('#oldPassword').on('keyup', function () {
            //    if ($(this).val() != $('#password').val()) {
            //        document.getElementById("changePassword").disabled = true;
            //    } else {
            //        document.getElementById("changePassword").disabled = false;
            //    }
            //});

            $('#confirm_password').on('keyup', function () {
                if ($(this).val() == $('#password').val()) {
                    $('#message').html('matching').css('color', 'green');
                    document.getElementById("changePassword").disabled = false;
                }
                else {
                    $('#message').html('not matching').css('color', 'red');
                    document.getElementById("changePassword").disabled = true;
                }
            });
        });
    </script>
}

@{
    Layout = Constants.PATH_ADMIN_LAYOUT;
    ViewBag.Title = "Nhân viên";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Đổi mật khẩu</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Đổi mật khẩu
            </div>
            </br>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id, new { name = "id" })

                    <div class="form-group">
                        <p class="control-label col-md-2">Mật khẩu cũ</p>
                        <div class="col-md-8">
                            <input type="text" class="form-control" id="oldPassword" />
                        </div>
                    </div>

                    <div class="form-group">
                        <p class="control-label col-md-2">Mật khẩu mới</p>
                        <div class="col-md-8">
                            <input type="text" id="newPassword" class="form-control" name="password" />
                        </div>
                    </div>

                    <div class="form-group">
                        <p class="control-label col-md-2">Xác nhận mật khẩu</p>
                        <div class="col-md-8">
                            <div class="checkbox">
                                <input type="text" id="confirmPassword" class="form-control" />
                            </div>
                        </div>
                        <span id="message"></span>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-8">
                            <input type="submit" value="Save" class="btn btn-default" id="changePassword" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
