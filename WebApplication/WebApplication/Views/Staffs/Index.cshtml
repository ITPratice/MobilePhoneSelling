@model PagedList.IPagedList<WebApplication.Models.Staff>
@using PagedList.Mvc
@using WebApplication.Common

@section Styles{
    <link href="~/Contents/AdminPage/Products.css" rel="stylesheet" type="text/css" />
    <link href="~/Contents/AdminPage/PagedList.css" rel="stylesheet" type="text/css" />
}

@{
    Layout = Constants.PATH_ADMIN_LAYOUT;
    ViewBag.Title = "Nhân viên";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Sản Phẩm</h1>
    </div>
</div>

<div>
    @using (Html.BeginForm("Index", "Staffs", FormMethod.Get))
    {
        <p style="float:right;">
            @Html.TextBox("searchString", ViewBag.CurrentFilter as string)
            <input type="submit" value="Search" />
        </p>
    }
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Html.ActionLink("Thêm mới", "Create")
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th class="header-item">
                                    @Html.DisplayNameFor(model => model.First().Name)
                                </th>
                                <th class="header-item">
                                    @Html.DisplayNameFor(model => model.First().Birthday)
                                </th>
                                <th class="header-item">
                                    @Html.DisplayNameFor(model => model.First().PhoneNumber)
                                </th>
                                <th class="header-item">
                                    @Html.DisplayNameFor(model => model.First().Address)
                                </th>
                                <th class="header-item">
                                    @Html.DisplayNameFor(model => model.First().Email)
                                </th>
                                <th class="header-item">
                                    @Html.DisplayNameFor(model => model.First().PositionId)
                                </th>
                                <th class="header-item">
                                    @Html.DisplayNameFor(model => model.First().Account.Name)
                                </th>
                                <th class="header-item">
                                    @Html.DisplayNameFor(model => model.First().Deleted)
                                </th>
                                <th class="header-item"></th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr class="gradeA">
                                <td class="row-item">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td class="row-item">
                                    @Html.DisplayFor(modelItem => item.Birthday)
                                </td>
                                <td class="row-item">
                                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                                </td>
                                <td class="row-item">
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td class="row-item">
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td class="row-item">
                                    @Html.DisplayFor(modelItem => item.Position.Name)
                                </td>
                                <td class="row-item">
                                    @Html.DisplayFor(modelItem => item.Account.Name)
                                </td>
                                <td class="row-item">
                                    @Html.DisplayFor(modelItem => item.Deleted)
                                </td>
                                @if (item.Deleted)
                                {
                                    <td class="row-item">
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                                    </td>
                                }
                                else
                                {
                                    <td class="row-item">
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                    </td>
                                }
                            </tr>
                        }
                    </table>
                    <div class="page_area" style="text-align:center;">
                        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                        @Html.PagedListPager(Model, page => Url.Action("Index",
                   new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
                    </div>

                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
