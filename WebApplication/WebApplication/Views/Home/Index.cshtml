@using WebApplication.Models
@using WebApplication.Common
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = Constants.PATH_MASTER_PAGE;
}
@{int count = 0;}
@Html.ActionLink("Compare", "Compare", "Products")
<div class="col-md-3 s-d">
    <div class="w_sidebar">
        <section class="sky-form">
            <h4>Giá từ</h4>
            <div class="row1 scroll-pane">
                <div class="col col-4">
                    <p>Khách ghé thăm: @ApplicationInstance.Application["Totaluser"]</p>
                </div>
            </div>
        </section>

    </div>
</div>
<div class="col-md-9 w_content">
    @foreach (var item in Model)
    {
        <div class="grid1_of_4">
            <div class="content_box">
                <a href="@Url.Action("ProductDetails", "Products", new { @id = item.Id })">
                    <img src="@Url.Content(Constants.PATH_IMAGE + "/" + @item.Image)" class="img-responsive" alt="" align="middle" />
                </a>
                <h4><a href="details.html">@item.Name</a></h4>
                <div class="grid_1 simpleCart_shelfItem">
                    <div class="item_add">
                        <span class="item_price">
                            <h6>@String.Format("{0:$ 0,0}", @item.Price)</h6>
                        </span>
                    </div>
                    <div class="item_add">
                        <span class="item_price">
                            <a href="@Url.Action("AddShoppongCart", "Cart", new { @_idProducts = item.Id, @_strUrl = Request.Url.ToString() })">Thêm vào giỏ hàng</a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="clearfix"></div>
</div>
