@model PagedList.IPagedList<WebApplication.Models.Account>
@using PagedList.Mvc
@using WebApplication.Common

@section Styles{
    <link href="~/Contents/AdminPage/Products.css" rel="stylesheet" type="text/css" />
    <link href="~/Contents/AdminPage/PagedList.css" rel="stylesheet" type="text/css" />
}

@{
    Layout = Constants.PATH_ADMIN_LAYOUT;
    ViewBag.Title = "Tài khoản";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Sản Phẩm</h1>
    </div>
</div>

<div>
    @using (Html.BeginForm("Index", "Accounts", FormMethod.Get))
    {
        <p style="float:right;">
            @Html.TextBox("searchString", ViewBag.CurrentFilter as string)
            <input type="submit" value="Search" />
        </p>
    }
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <tr>
                            <th class="header-item">
                                @Html.DisplayNameFor(model => model.First().Name)
                            </th>
                            <th class="header-item">
                                @Html.DisplayNameFor(model => model.First().Password)
                            </th>
                            <th class="header-item">
                                @Html.DisplayNameFor(model => model.First().Deleted)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr class="gradeA">
                                <td class="row-item">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td class="row-item">
                                    @Html.DisplayFor(modelItem => item.Password)
                                </td>
                                <td class="row-item">
                                    @Html.DisplayFor(modelItem => item.Deleted)
                                </td>
                                @if (!item.Deleted)
                                {
                                    <td class="row-item">
                                        @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Cài lại mật khẩu", "ResetPassword", new { id = item.Id }) |
                                        @Html.ActionLink("Loại bỏ", "Delete", new { id = item.Id })
                                    </td>
                                }
                                else
                                {
                                    <td class="row-item">
                                        @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Cài lại mật khẩu", "ResetPassword", new { id = item.Id }) |
                                        @Html.ActionLink("Khôi phục", "Restore", new { id = item.Id })
                                    </td>
                                }
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
