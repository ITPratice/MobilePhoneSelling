@using WebApplication.Models
@using WebApplication.Common
@model List<Product>

@{
    ViewBag.Title = "ProductsByManufacturerId";
    Layout = "~/Views/Layout/MasterPage.cshtml";
}
@*<script type="text/javascript">
    $(function () {
        $('.radio').on('change', function () {
            $('#formFilter').submit();
        });
    });*@
@*</script>*@
<div class="col-md-3 s-d">
    <div class="w_sidebar">
        <section class="sky-form">
            <h4>Giá từ</h4>
            <div class="row1 scroll-pane">
                                
                
                    <div class="col col-4">
                        
                        <label class="checkbox"><input type="radio" name="chkFilter1" class="radio" value="100-200" /><i></i>Nhỏ hơn 1 triệu</label>
                        <label class="checkbox"><input type="radio" name="chkFilter2" class="radio" value="chk1to3" /><i></i>Từ 1 đến 3 triệu</label>
                        <label class="checkbox"><input type="radio" name="chkFilter3" class="radio" value="chk3to7" /><i></i>Từ 3 đến 7 triệu</label>
                        <label class="checkbox"><input type="radio" name="chkFilter" class="radio" value="chk7to10" /><i></i>Từ 7 đến 10 triệu</label>
                        <label class="checkbox"><input type="radio" name="chkFilter" class="radio" value="chk10" /><i></i>Trên 10 triệu</label>
                    </div>
            </div>
        </section>

    </div>
</div>

<div class="col-md-9 w_content">
    <div class="grids_of_4">
        <form id="formFilter" method="post" action="#">
            @if (Model.Count == 0)
            {
                <label>Khong co san pham</label>
            }
            else
            {
                foreach (var item in Model)
                {
                    <div class="grid1_of_4">
                        <div class="content_box">
                            <a href="details.html">
                                <img src="@Url.Content(Constants.PATH_IMAGE + "/" + item.Image)" class="img-responsive" alt="" />
                            </a>
                            <h4><a href="details.html">@item.Name</a></h4>
                            <div class="grid_1 simpleCart_shelfItem">
                                <div class="item_add">
                                    <span class="item_price">
                                        <h6>@String.Format("{0:0,0 ₫}", @item.Price)</h6>
                                    </span>
                                </div>
                                <div class="item_add">
                                    <span class="item_price">
                                        <a href="@Url.Action("AddShoppongCart", "Cart", new { @_idProducts = item.Id, @_strUrl = Request.Url.ToString() })">Thêm vào giỏ hàng</a>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            </form>
</div>
</div>
