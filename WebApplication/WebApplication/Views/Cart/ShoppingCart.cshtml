@using WebApplication.Models
@using WebApplication.Common
@model List<ShoppingCart>
@{
    ViewBag.Title = "ShoppingCart";
    Layout = Constants.PATH_MASTER_PAGE;
}
<div class="container">
    <div class="check">
        <div class="col-md-3 cart-total">
            <a class="continue" href="@Url.Action("Index", "Home")">Tiếp tục mua hàng</a>
            <div class="price-details">
                <h3>Price Details</h3>
                <span>Total</span>
                <span class="total1">6200.00</span>
                <span>Discount</span>
                <span class="total1">---</span>
                <span>Delivery Charges</span>
                <span class="total1">150.00</span>
                <div class="clearfix"></div>
            </div>
            <ul class="total_price">
                <li class="last_price"> <h4>TOTAL</h4></li>
                <li class="last_price"><span>6350.00</span></li>
            </ul>
            <div class="clearfix"> </div>


            <div class="clearfix"></div>
            <a class="order" href="#">Place Order</a>
            <div class="total-item">
                <h3>OPTIONS</h3>
                <h4>COUPONS</h4>
                <a class="cpns" href="#">Apply Coupons</a>
                <p><a href="#">Log In</a> to use accounts - linked coupons</p>
            </div>
        </div>
        <div class="col-md-9 cart-items">
            <h1>Giỏ hàng</h1>
            <script>
                $(document).ready(function (c) {
                    $('.close1').on('click', function (c) {
                        $('.cart-header').fadeOut('slow', function (c) {
                            $('.cart-header').remove();
                        });
                    });
                });
            </script>
            @{
                foreach (var item in Model)
                {
                    <div class="cart-header">
                        <div class="close1"> </div>
                        <div class="cart-sec simpleCart_shelfItem">
                            <div class="cart-item cyc">
                                <img src="@Url.Content(Constants.PATH_IMAGE + "/" + item.Image)" class="img-responsive" alt="" />
                            </div>
                            <div class="cart-item-info">
                                <h3><a href="#">@item.Name</a><span>Model No: 3578</span></h3>
                                <ul class="qty">
                                    <li><p>Giá: @item.Price</p></li>
                                    <li><p>Số lượng : @item.Quantity</p></li>
                                    <li><p>Thành tiền: @item.ThanhTien</p></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                }
            }
        </div>
    </div>
</div>
<div class="clearfix"> </div>
