@model PagedList.IPagedList<WebApplication.Models.Order>
@using PagedList.Mvc
@using WebApplication.Common

@section Styles{
    <link href="~/Contents/AdminPage/Products.css" rel="stylesheet" type="text/css" />
    <link href="~/Contents/AdminPage/PagedList.css" rel="stylesheet" type="text/css" />
}

@{
    Layout = Constants.PATH_ADMIN_LAYOUT;
    ViewBag.Title = "Đơn hàng";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Sản Phẩm</h1>
    </div>
</div>

<div>
    @using (Html.BeginForm("Index", "Orders", FormMethod.Get))
    {
        <p style="float:right;">
            @Html.TextBox("searchString", ViewBag.CurrentFilter as string)
            <input type="submit" value="Search" />
        </p>
    }
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Html.ActionLink("Thêm mới", "Create")
            </div>
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th class="header-item">
                                    @Html.DisplayNameFor(model => model.First().Date)
                                </th>
                                <th class="header-item">
                                    @Html.DisplayNameFor(model => model.First().Customer.Name)
                                </th>
                                <th class="header-item">
                                    @Html.DisplayNameFor(model => model.First().IsAssigned)
                                </th>
                                <th class="header-item">
                                    @Html.DisplayNameFor(model => model.First().Deleted)
                                </th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="gradeA">
                                    <td class="row-item">
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                    <td class="row-item">
                                        @Html.DisplayFor(modelItem => item.Customer.Name)
                                    </td>
                                    <td class="row-item">
                                        @Html.DisplayFor(modelItem => item.IsAssigned)
                                    </td>
                                    <td class="row-item">
                                        @Html.DisplayFor(modelItem => item.Deleted)
                                    </td>
                                    <td class="row-item">
                                        @Html.ActionLink("Giao Hàng", "ShowDeliverer", new { id = item.Id }) |
                                        @Html.ActionLink("Chi tiết", "Details", new { orderId = item.Id }) |
                                        @Html.ActionLink("Loại bỏ", "Delete", new { id = item.Id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
