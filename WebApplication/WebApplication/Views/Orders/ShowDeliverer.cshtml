@model PagedList.IPagedList<WebApplication.Models.Staff>
@using PagedList.Mvc
@using WebApplication.Common

@section Styles{
    <link href="~/Contents/AdminPage/Products.css" rel="stylesheet" type="text/css" />
    <link href="~/Contents/AdminPage/PagedList.css" rel="stylesheet" type="text/css" />
}

@{
    Layout = Constants.PATH_ADMIN_LAYOUT;
    ViewBag.Title = "Nhân viên giao hàng";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Nhân viên giao hàng</h1>
    </div>
</div>

<div>
    @using (Html.BeginForm("Index", "Orders", FormMethod.Get))
    {
        <p style="float:right;">
            @Html.TextBox("searchString", ViewBag.CurrentFilter as string)
            <input type="submit" value="Search" />
        </p>
    }
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th class="header-item">
                                    @Html.DisplayNameFor(model => model.First().Name)
                                </th>
                                <th class="header-item">
                                    @Html.DisplayNameFor(model => model.First().Birthday)
                                </th>
                                <th class="header-item">
                                    @Html.DisplayNameFor(model => model.First().PhoneNumber)
                                </th>
                                <th class="header-item">
                                    @Html.DisplayNameFor(model => model.First().IsBusy)
                                </th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                if (item.PositionId.Equals("POS0004") && !item.IsBusy)
                                {
                                    <tr class="gradeA">
                                        <td class="row-item">
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td class="row-item">
                                            @Html.DisplayFor(modelItem => item.Birthday)
                                        </td>
                                        <td class="row-item">
                                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                                        </td>
                                        <td class="row-item">
                                            @Html.DisplayFor(modelItem => item.IsBusy)
                                        </td>
                                        <td class="row-item">
                                            @Html.ActionLink("Chọn", "ChooseDeliverer", new { staffId = item.Id })
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
