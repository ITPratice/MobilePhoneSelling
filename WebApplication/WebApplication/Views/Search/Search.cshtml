@using WebApplication.Models
@using WebApplication.Common
@model List<Product>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Layout/MasterPage.cshtml";
}

<h2>Search</h2>
@{int count = 0;}
<div class="col-lg-12 w_content">
    <div class="grids_of_5">
        @foreach (var item in Model)
        {
            count++;
            <div class="grid1_of_5">
                <div class="content_box">
                    <a href="@Url.Action("ProductDetails", "Products", new { @id = item.Id })">
                        <img src="@Url.Content(Constants.PATH_IMAGE + "/" + item.Image)" class="img-responsive" alt="" />
                    </a>
                    <h4><a href="details.html">@item.Name</a></h4>
                    <div class="grid_1 simpleCart_shelfItem">
                        <div class="item_add">
                            <span class="item_price">
                                <h6>@String.Format("{0:$ 0,0}", @item.Price)</h6>
                            </span>
                        </div>
                        <div class="item_add">
                            <span class="item_price">
                                <a href="@Url.Action("AddShoppongCart", "Cart", new { @_idProducts = item.Id, @_strUrl = Request.Url.ToString() })" style="cursor:pointer">Thêm vào giỏ hàng</a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            if (count % 5 == 0)
            {
                <div style="clear:both"></div>
            }
        }
    </div>
</div>
<div style="clear:both"></div>

