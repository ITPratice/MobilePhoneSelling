@model WebApplication.Models.Customer

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Layout/MasterPage.cshtml";
}

@if (Session["Account"] == null)
{
    @Html.ActionLink("Trang chu", "Index", "Home")
}
else
{
    <div class="registration">
        <div class="registration_left">
            <h2>Thay đổi thông tin</h2>
            <div class="registration_form">
                @Html.ActionLink("Đổi mật khẩu", "ChangePassword", "Users", new { @id = Model.AccountId })
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model => model.Deleted)
                    @Html.HiddenFor(model => model.BankAccount)
                    @Html.HiddenFor(model => model.IsActivated)
                    @Html.HiddenFor(model => model.AccountId)
                    <div>
                        <label>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </label>
                    </div>
                    <div>
                        <label>
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { type = "text" } })
                        </label>
                    </div>
                    <div>
                        <label>
                            @Html.EditorFor(model => model.Birthday, new { htmlAttributes = new { type = "date" } })
                        </label>
                    </div>
                    <div>
                        <label>
                            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { type = "text" } })
                        </label>
                    </div>
                    <div>
                        <label>
                            @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { type = "text" } })
                        </label>
                    </div>
                    <div>
                        <label>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { type = "text" } })
                        </label>
                    </div>
                    <div>
                        <input type="submit" value="Lưu" id="register-submit">
                    </div>
                }
            </div>
        </div>
    </div>
}